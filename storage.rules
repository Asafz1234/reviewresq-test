rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /branding/{businessId}/{fileName} {
      allow read, write: if
        request.auth != null &&
        request.auth.uid == businessId &&
        fileName.matches("^logo(\\.[A-Za-z0-9]+)?$");
    }

    // Explicitly block other storage paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
